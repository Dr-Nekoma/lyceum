%% == Compiler & other options ==
{erl_opts, [
    warn_unused_import,
    warn_export_vars,
    warnings_as_errors,
    verbose,
    report,
    debug_info,
    {i, "./include"}
]}.

{dist_node, [
    {setcookie, 'lyceum'},
    {sname, 'lyceum_server'}
]}.

%% == Dependencies and Plugins ==
{deps, [
    {epgsql, "4.7.1"},
    {pc, "1.15.0"},
    {erlandono, "3.1.3"},
    {migraterl, "0.1.2"},
    {csv, "3.0.3", {pkg, csve}}
]}.

{plugins, [
    {rebar3_nix, ".*", {git, "https://github.com/erlang-nix/rebar3_nix.git", {tag, "v0.1.1"}}},
    {covertool, "v2.0.4"}
]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
{cover_opts, [verbose]}.
{covertool, [
    {coverdata_files, [
        "ct.coverdata",
        "eunit.coverdata"
    ]}
]}.

%% == Common Test ==
{ct_opts, []}.

%% == Releases ==
{relx, [
    {release, {lyceum, "0.2.3"}, [
        epgsql,
        erlandono,
        {migraterl, load},
        {lib_database, permanent},
        {lib_map, permanent},
        world,
        cache,
        auth,
        player,
        sasl
    ]},

    {mode, dev},
    {extended_start_script, true},

    %% automatically picked up if the files
    %% exist but can be set manually, which
    %% is required if the names aren't exactly
    %% sys.config and vm.args
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    %% the .src form of the configuration files do
    %% not require setting RELX_REPLACE_OS_VARS
    %% {sys_config_src, "./config/sys.config.src"},
    %% {vm_args_src, "./config/vm.args.src"}

    {overlay, [
        {mkdir, "log/sasl"},
        {mkdir, "log/errors"},
        {mkdir, "database/migrations"},
        {mkdir, "database/queries"},
        {copy, "maps/*", "\{\{output_dir\}\}/maps/"},
        {copy, "database/migrations/*", "\{\{output_dir\}\}/database/migrations/"},
        {copy, "database/queries/*", "\{\{output_dir\}\}/database/queries/"}
    ]}
]}.

%% == Shell ==
%% apps to auto-boot with `rebar3 shell'; defaults to apps
%% specified in a `relx' tuple, if any.
{shell, [
    {config, "config/shell.config"},
    {apps, [
        kernel,
        stdlib,
        sasl,
        {migraterl, load},
        {lib_database, permanent},
        {lib_map, permanent},
        world,
        cache,
        auth,
        player
    ]}
    %%{script_file, "shell_setup.escript"}
    %%{env_file, "deployment/default.env"}]
]}.

%% == Profiles ==
{profiles, [
    %% prod is the default mode when prod
    %% profile is used, so does not have
    %% to be explicitly included like this
    {prod, [
        {relx, [
            {include_erts, true},
            {sys_config, "./config/sys.config"},
            %% https://rebar3.org/docs/deployment/releases/#modes
            {mode, prod}
        ]}
    ]},

    {test, [
        {deps, [meck, proper]}
    ]}
]}.

%% == Directories ==
{project_app_dirs, ["apps/*", "include/*", "." ]}.

%% == Dialyzer ==
{dialyzer, [
    {warnings, [
        % Basic Warnings
        no_return,
        no_unused,
        no_improper_lists,
        no_fun_app,
        no_match,
        no_opaque,
        no_fail_call,
        no_contracts,
        no_behaviours,
        no_undefined_callbacks,
        
        % Additional Stuff
        unmatched_returns,
        error_handling,
        no_underspecs,
        no_unknown
    ]},
    
    {plt_apps, top_level_deps},
    {exclude_mods, []},
    % Output configuration
    {output_format, formatted}
]}.

%% == Escript ==
